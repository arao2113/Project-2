<div id="home">
  <div class="row bg-primary mainheader shadow rounded p-3">
    <div class="col-md-3">
      <input class="form-control v-alignwrapper" type="text" placeholder="Search" aria-label="Search">
    </div>
    <h1 class="text-white col-md-6 text-center font-weight-bold">PCParts</h1>
    <ul class="col-md-3">
      <li><a href="#" class="text-white">Log in:</a></li>
      <li><a href="#" class="text-white">Create an Account:</a></li>
    </ul>
  </div>
  <div class="container">
    <h3 class="text-center">Listings</h3>
    <div class="row">
        <div id="example-list" class="partsdiv">
          {{#each Part}}
          <div data-id="{{this.id}}" class="card partcard">
            <img class="partimg" src="{{this.url}}">
            <div class="card-body">
              <h5>{{this.name}}</h5>
              <p>Category: {{this.category}}</p>
              <p>Price: ${{this.price}}</p>
              <a href="part/{{this.id}}">Select</a>
            </div>

            {{!-- <button class="btn btn-danger float-right delete">ï½˜</button> --}}
            {{!-- old delete button, save for later --}}
          </div>
          {{/each}}
      </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
