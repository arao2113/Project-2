<div id="home">
  <div class="row bg-primary mainheader shadow rounded p-3">
    <div class="col-md-3">
      <input class="form-control v-alignwrapper" type="text" placeholder="Search" aria-label="Search">
    </div>
    <h1 class="text-white col-md-6 text-center font-weight-bold">PCParts</h1>
    <ul class="col-md-3">
      <li><a href="#" class="text-white">Log in:</a></li>
      <li><a href="#" class="text-white">Create an Account:</a></li>
    </ul>
  </div>
  <div class="container bg-white">
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="text-center">Post an PCPart!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="exampleFormControlSelect1">Select Category</label>
            <select class="form-control" id="item-category">
                <option selected="selected">CPU Processors</option>
                <option>Motherboards</option>
                <option>Computer Memory</option>
                <option>Hard Drives</option>
                <option>Power Supplies</option>
                <option>Fan & CPU Coolers</option>
                <option>Video Cards</option>
                <option>Cases</option>
                <option>Misc</option>
            </select>
          </div>
          <div class="form-group">
            <label for="item-price">Price:</label>
            <input type="number" class="form-control" id="item-price" aria-describedby="example-text" placeholder="Enter Price"></input>
          </div>
          <div class="form-group">
            <label for="image-url">Image Url:</label>
            <input type="url" class="form-control" id="image-url" aria-describedby="example-text" placeholder="Enter Image URL"></input>
          </div>
          <div class="form-group">
            <label for="example-text">Product Description</label>
            <textarea class="form-control" id="item-name" rows="3" placeholder="A brief item description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/part.js"></script>
